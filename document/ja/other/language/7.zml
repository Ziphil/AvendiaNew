  \table<
    \caption<{καλέω}「呼ぶ」>
    \tr<\th<動詞幹>\td|col="2"|<[καλ(-ε)-]>\td<不規則挿入 (現在幹, 未来幹, アオリスト幹)>>
    \tr<\th<現在幹>\td<[καλεʚ-]>\td<{καλῶ}>\td<->>
    \tr<\th<未来幹>\td<[καλεʚ-]>\td<{καλῶ}>\td<アッティカ式>>
    \tr<\th<アオリスト幹>\td<[καλεσα-]>\td<{ἐκάλεσα}>\td<短音保持>>
    \tr<\th<完了幹>\td<[κεκληκα-]>\td<{κέκληκα}>\td<音位転換>>
    \tr<\th<中動完了幹>\td<[κεκλημαι-]>\td<{κέκλημαι}>\td<音位転換>>
    \tr<\th<受動幹>\td<[κληθην-]>\td<{ἐκλήθην}>\td<音位転換>>
  >
  \h2|id="krazo"|<{κρ\gd|d="a"|<ᾱ>ζω}>
