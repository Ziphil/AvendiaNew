    \tr<\th<現在幹>\td<[ἐλαυνʚ-]>\td<{ἐλαύνω}>\td<Ν 型 (-[υν])>>
    \tr<\th<未来幹>\td<[ἐλαʚ-]>\td<{ἐλῶ}>\td<アッティカ式>>
    \tr<\th<アオリスト幹>\td<[ἐλασα-]>\td<{ἤλασα}>\td<->>
    \tr<\th<完了幹>\td<[ἐληλακα-]>\td<{ἐλήλακα}>\td<アッティカ畳音>>
    \tr<\th<中動完了幹>\td<[ἐληλα-]>\td<{ἐλήλαμαι}>\td<アッティカ畳音>>
    \tr<\th<受動幹>\td<[ἐλαθη-]>\td<{ἠλάθην}>\td<->>
  >
  \h2|id="hepomai"|<{ἕπομαι}>
  \table<
    \caption<{ἕπομαι}「後に従う」>
